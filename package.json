{
  "name": "@sanity/schema-client",
  "version": "0.1.0",
  "description": "TypeScript client library for working with Sanity server-side deployed schemas",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "sanity",
    "schema",
    "cms",
    "headless",
    "api",
    "client"
  ],
  "author": "Sanity.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simen/schema-client.git"
  },
  "bugs": {
    "url": "https://github.com/simen/schema-client/issues"
  },
  "homepage": "https://github.com/simen/schema-client#readme",
  "peerDependencies": {
    "@sanity/client": ">=6.0.0"
  },
  "devDependencies": {
    "@sanity/client": "^6.24.1",
    "@types/node": "^22.10.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
